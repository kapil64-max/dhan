    ]
  },
  {
    id: 6,
    title: "Organic Ghee Rice",
    category: "Main Course",
    cookTime: "35 mins",
    difficulty: "Medium",
    image: "https://images.pexels.com/photos/1556688/pexels-photo-1556688.jpeg?auto=compress&cs=tinysrgb&w=600",
    description: "Fragrant basmati rice cooked in pure A2 cow ghee with whole spices",
    ingredients: [
      "2 cups OrganicTattva Basmati Rice",
      "3 tbsp OrganicTattva A2 Cow Ghee",
      "4-5 green cardamom pods",
      "2 bay leaves",
      "1 inch cinnamon stick",
      "4-5 cloves",
      "1 tsp cumin seeds",
      "3.5 cups water",
      "Salt to taste",
      "Fresh mint leaves for garnish"
    ],
    instructions: [
      "Wash and soak rice for 30 minutes",
      "Heat ghee in a heavy-bottomed pot",
      "Add whole spices and cumin seeds",
      "Add drained rice and saut√© for 2 minutes",
      "Add water and salt, bring to boil",
      "Cover and cook on low heat for 18 minutes",
      "Let it rest for 5 minutes",
      "Garnish with mint and serve hot"
