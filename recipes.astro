const categories = ["All", "Breakfast", "Snacks", "Main Course", "Healthy Meals", "Beverages", "Spice Blends"];
---

<Layout title="Organic Recipes - OrganicTattva" description="Discover healthy and delicious recipes using our certified organic ingredients. From traditional Indian dishes to modern healthy meals.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="py-16 bg-gradient-to-br from-organic-green to-organic-light text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold mb-6">Organic Recipe Collection</h1>
        <p class="text-xl text-green-100">
          Discover delicious and healthy recipes using our premium organic ingredients. From traditional Indian favorites to modern healthy meals.
        </p>
      </div>
    </section>

    <!-- Recipe Categories Filter -->
    <section class="py-8 bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap gap-4 justify-center">
          {categories.map((category) => (
            <button class="px-6 py-2 rounded-full border-2 border-organic-green text-organic-green hover:bg-organic-green hover:text-white transition-colors font-medium">
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Recipes Grid -->
    <section class="py-16 bg-warm-gray">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {recipes.map((recipe) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
              <div class="relative">
                <img 
                  src={recipe.image} 
                  alt={recipe.title}
                  class="w-full h-48 object-cover"
                />
                <div class="absolute top-4 left-4">
                  <span class="bg-organic-green text-white px-3 py-1 rounded-full text-sm font-medium">
                    {recipe.category}
                  </span>
                </div>
                <div class="absolute top-4 right-4 bg-white bg-opacity-90 px-3 py-1 rounded-full">
                  <span class="text-sm font-medium text-gray-700">{recipe.cookTime}</span>
                </div>
              </div>
              
              <div class="p-6">
                <div class="flex items-center justify-between mb-2">
                  <h3 class="text-xl font-semibold text-gray-900">{recipe.title}</h3>
                  <span class="text-sm text-organic-green font-medium">{recipe.difficulty}</span>
                </div>
                <p class="text-gray-600 mb-4">{recipe.description}</p>
                
                <div class="space-y-4">
                  <div>
                    <h4 class="font-semibold text-gray-900 mb-2">Ingredients:</h4>
                    <ul class="text-sm text-gray-600 space-y-1">
                      {recipe.ingredients.slice(0, 3).map((ingredient) => (
                        <li class="flex items-start">
                          <span class="text-organic-green mr-2">‚Ä¢</span>
                          {ingredient}
                        </li>
                      ))}
                      {recipe.ingredients.length > 3 && (
                        <li class="text-organic-green font-medium">
                          +{recipe.ingredients.length - 3} more ingredients
                        </li>
                      )}
                    </ul>
                  </div>
                  
                  <button class="w-full bg-organic-green text-white py-3 rounded-lg hover:bg-opacity-90 transition-colors font-medium">
                    View Full Recipe
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recipe Tips -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Cooking with Organic Ingredients</h2>
          <p class="text-xl text-gray-600">Tips for getting the best results with our organic products</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center p-6 bg-gradient-to-br from-organic-light/10 to-organic-accent/10 rounded-xl">
            <div class="text-4xl mb-4">üåæ</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Quality Ingredients</h3>
            <p class="text-gray-600">Our organic ingredients are more flavorful and nutritious, so you may need to adjust quantities compared to conventional products.</p>
          </div>
          <div class="text-center p-6 bg-gradient-to-br from-organic-light/10 to-organic-accent/10 rounded-xl">
            <div class="text-4xl mb-4">‚è∞</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Cooking Times</h3>
            <p class="text-gray-600">Organic grains and pulses may require slightly longer cooking times but offer better texture and taste.</p>
          </div>
          <div class="text-center p-6 bg-gradient-to-br from-organic-light/10 to-organic-accent/10 rounded-xl">
            <div class="text-4xl mb-4">üíö</div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Storage Tips</h3>
            <p class="text-gray-600">Store organic products in airtight containers in cool, dry places to maintain freshness and prevent pest infestation.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-16 bg-organic-green text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">Get Weekly Recipe Ideas</h2>
        <p class="text-xl text-green-100 mb-8">
          Subscribe to receive new organic recipes and cooking tips every week
        </p>
        
        <div class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-4">
            <input 
              type="email" 
              placeholder="Enter your email address"
              class="flex-1 px-4 py-3 rounded-lg text-gray-900 focus:outline-none focus:ring-2 focus:ring-organic-accent"
            />
            <button class="bg-organic-accent text-white px-6 py-3 rounded-lg hover:bg-opacity-90 transition-colors font-medium">
              Subscribe
            </button>
          </div>
          <p class="text-sm text-green-200 mt-4">
            Join 5,000+ home cooks. No spam, unsubscribe anytime.
          </p>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<script>
  // Simple category filtering functionality
  document.addEventListener('DOMContentLoaded', function() {
    const categoryButtons = document.querySelectorAll('button[class*="border-organic-green"]');
    const recipeCards = document.querySelectorAll('.grid > div');
    
    categoryButtons.forEach(button => {
      button.addEventListener('click', function() {
        const category = this.textContent.trim();
        
        // Update active button
        categoryButtons.forEach(btn => {
          btn.classList.remove('bg-organic-green', 'text-white');
          btn.classList.add('text-organic-green');
        });
        this.classList.add('bg-organic-green', 'text-white');
        this.classList.remove('text-organic-green');
        
        // Filter recipes
        recipeCards.forEach(card => {
          const cardCategory = card.querySelector('.bg-organic-green')?.textContent.trim();
          if (category === 'All' || cardCategory === category) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>