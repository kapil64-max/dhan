---
const certifications = [
  { name: "USDA Organic", logo: "🌿", description: "Certified by USDA" },
  { name: "India Organic", logo: "🇮🇳", description: "Government Certified" },
  { name: "Jaivik Bharat", logo: "🌱", description: "Premium Quality" },
  { name: "BRC Certified", logo: "✅", description: "Global Standards" },
  { name: "Kosher", logo: "🔯", description: "Religious Compliance" },
  { name: "Sedex", logo: "🤝", description: "Ethical Sourcing" }
];

const features = [
  {
    icon: "🔬",
    title: "250+ Royal Quality Checks",
    description: "Rigorous testing for pesticides, heavy metals, and contaminants at every stage",
    color: "from-royal-gold to-amber-glow"
  },
  {
    icon: "🚜",
    title: "Farm-to-Fork Traceability",
    description: "Track your premium food from the source farmer to your royal table",
    color: "from-sage-green to-mint-fresh"
  },
  {
    icon: "👨‍🌾",
    title: "9,000+ Royal Farmers",
    description: "Supporting sustainable farming practices across India's finest regions",
    color: "from-forest-green to-sage-green"
  },
  {
    icon: "🌍",
    title: "Ethical Royal Sourcing",
    description: "Fair trade practices ensuring farmer welfare and premium quality",
    color: "from-earth-brown to-warm-beige"
  }
];
---

<section class="py-24 bg-white relative overflow-hidden">
  <!-- Decorative Background -->
  <div class="absolute inset-0 bg-organic-texture opacity-10"></div>
  <div class="absolute top-0 left-0 w-full h-2 bg-golden-gradient"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Royal Certifications -->
    <div class="text-center mb-20 animate-fade-in">
      <div class="inline-flex items-center space-x-2 bg-golden-gradient px-6 py-2 rounded-full text-white font-medium mb-6">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Trusted Certifications</span>
      </div>
      
      <h2 class="heading-luxury text-4xl lg:text-5xl text-charcoal mb-6">
        Royal <span class="text-shimmer">Certifications</span> & Trust
      </h2>
      <div class="organic-divider"></div>
      <p class="text-xl text-charcoal/70 max-w-3xl mx-auto text-elegant">
        Our commitment to excellence is validated by the world's most prestigious organic certifications
      </p>
    </div>

    <!-- Certification Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6 mb-20">
      {certifications.map((cert, index) => (
        <div class="luxury-card bg-gradient-to-br from-cream-luxury to-white p-6 rounded-2xl shadow-soft hover:shadow-golden border border-golden-yellow/20 text-center group animate-slide-up" style={`animation-delay: ${index * 0.1}s`}>
          <div class="text-4xl mb-3 group-hover:scale-110 transition-transform duration-300">{cert.logo}</div>
          <h3 class="font-semibold text-charcoal text-sm mb-1 group-hover:text-royal-gold transition-colors">{cert.name}</h3>
          <p class="text-xs text-charcoal/60">{cert.description}</p>
        </div>
      ))}
    </div>
    
    <!-- Royal Features -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-20">
      {features.map((feature, index) => (
        <div class="luxury-card text-center p-8 bg-gradient-to-br from-white to-cream-luxury rounded-3xl shadow-luxury hover:shadow-royal border border-golden-yellow/20 group animate-slide-up" style={`animation-delay: ${index * 0.15}s`}>
          <div class={`w-20 h-20 mx-auto mb-6 bg-gradient-to-br ${feature.color} rounded-full flex items-center justify-center text-4xl group-hover:scale-110 transition-transform duration-300 shadow-golden`}>
            {feature.icon}
          </div>
          <h3 class="heading-luxury text-xl text-charcoal mb-4 group-hover:text-royal-gold transition-colors">
            {feature.title}
          </h3>
          <p class="text-charcoal/70 text-elegant leading-relaxed">{feature.description}</p>
        </div>
      ))}
    </div>
    
    <!-- Celebrity Endorsement - Royal Treatment -->
    <div class="relative animate-fade-in">
      <div class="bg-gradient-to-br from-royal-gold via-golden-yellow to-amber-glow rounded-3xl p-12 text-white text-center shadow-royal overflow-hidden">
        <!-- Decorative Elements -->
        <div class="absolute top-0 left-0 w-32 h-32 bg-white/10 organic-shape"></div>
        <div class="absolute bottom-0 right-0 w-40 h-40 bg-white/10 organic-shape-2"></div>
        
        <div class="relative z-10">
          <div class="inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm px-6 py-2 rounded-full text-sm font-medium mb-6">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span>Celebrity Endorsed</span>
          </div>
          
          <h3 class="heading-luxury text-3xl lg:text-4xl mb-6">
            Trusted by Royalty & Celebrities
          </h3>
          <p class="text-xl mb-8 text-elegant leading-relaxed max-w-3xl mx-auto">
            "Quality you can trust, purity you can taste" - Our premium organic products are endorsed by 
            Kareena Kapoor Khan for their exceptional purity and royal quality standards.
          </p>
          
          <div class="flex justify-center items-center space-x-6">
            <div class="w-20 h-20 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center shadow-luxury">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            </div>
            <div class="text-left">
              <div class="heading-luxury text-xl font-bold">Celebrity Endorsed Quality</div>
              <div class="text-white/90 text-elegant">Kareena Kapoor Khan</div>
              <div class="flex text-white/80 mt-1">
                ★★★★★
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Royal Statistics -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 animate-fade-in">
      <div class="text-center p-6 bg-gradient-to-br from-cream-luxury to-white rounded-2xl shadow-soft border border-golden-yellow/20">
        <div class="text-3xl font-bold text-royal-gold mb-2">100%</div>
        <div class="text-sm text-charcoal/70 font-medium">Organic Certified</div>
      </div>
      <div class="text-center p-6 bg-gradient-to-br from-cream-luxury to-white rounded-2xl shadow-soft border border-golden-yellow/20">
        <div class="text-3xl font-bold text-royal-gold mb-2">50K+</div>
        <div class="text-sm text-charcoal/70 font-medium">Happy Families</div>
      </div>
      <div class="text-center p-6 bg-gradient-to-br from-cream-luxury to-white rounded-2xl shadow-soft border border-golden-yellow/20">
        <div class="text-3xl font-bold text-royal-gold mb-2">15+</div>
        <div class="text-sm text-charcoal/70 font-medium">Years Experience</div>
      </div>
      <div class="text-center p-6 bg-gradient-to-br from-cream-luxury to-white rounded-2xl shadow-soft border border-golden-yellow/20">
        <div class="text-3xl font-bold text-royal-gold mb-2">99.9%</div>
        <div class="text-sm text-charcoal/70 font-medium">Purity Guaranteed</div>
      </div>
    </div>
  </div>
</section>