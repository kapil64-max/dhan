---
---

<section class="relative min-h-screen bg-gradient-to-br from-cream-luxury via-champagne to-golden-yellow overflow-hidden">
  <!-- Floating Organic Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-royal-gold/10 organic-shape float-element"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-sage-green/10 organic-shape-2 float-element" style="animation-delay: -2s;"></div>
    <div class="absolute bottom-32 left-1/4 w-40 h-40 bg-amber-glow/10 organic-shape float-element" style="animation-delay: -4s;"></div>
    <div class="absolute bottom-20 right-10 w-28 h-28 bg-mint-fresh/10 organic-shape-2 float-element" style="animation-delay: -1s;"></div>
  </div>

  <!-- Parallax Background Pattern -->
  <div class="absolute inset-0 bg-organic-texture opacity-30"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center min-h-screen">
      <div class="space-y-10 animate-fade-in">
        <!-- Royal Badge -->
        <div class="inline-flex items-center space-x-2 bg-white/80 backdrop-blur-sm px-6 py-3 rounded-full shadow-soft">
          <div class="w-3 h-3 bg-royal-gold rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-charcoal tracking-wide uppercase">Premium Organic Collection</span>
        </div>

        <!-- Luxury Headline -->
        <h1 class="heading-luxury text-5xl lg:text-7xl text-charcoal leading-tight">
          Pure <span class="text-shimmer">Organic</span> Foods
          <br>
          <span class="text-elegant text-4xl lg:text-5xl text-forest-green">From Royal Farms</span>
        </h1>

        <!-- Elegant Description -->
        <p class="text-xl text-charcoal/80 leading-relaxed max-w-2xl text-elegant">
          Experience the finest 100% certified organic foods that embody luxury, purity, and wellness. 
          Trusted by royalty, crafted for your family's health with stringent quality testing at 250+ checkpoints.
        </p>

        <!-- Premium Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-6">
          <button class="btn-luxury bg-golden-gradient text-white px-10 py-4 rounded-full font-semibold text-lg hover:shadow-royal transition-all duration-300 transform hover:scale-105 group">
            <span class="flex items-center justify-center space-x-3">
              <svg class="w-5 h-5 group-hover:rotate-12 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Explore Royal Collection</span>
            </span>
          </button>
          <button class="border-2 border-royal-gold text-royal-gold px-10 py-4 rounded-full font-semibold text-lg hover:bg-royal-gold hover:text-white transition-all duration-300 transform hover:scale-105">
            Discover Our Story
          </button>
        </div>
        
        <!-- Royal Trust Indicators -->
        <div class="flex items-center space-x-12 pt-12">
          <div class="text-center group">
            <div class="text-3xl font-bold text-royal-gold group-hover:text-amber-glow transition-colors">9,000+</div>
            <div class="text-sm text-charcoal/70 font-medium tracking-wide uppercase">Royal Farmers</div>
          </div>
          <div class="text-center group">
            <div class="text-3xl font-bold text-royal-gold group-hover:text-amber-glow transition-colors">140+</div>
            <div class="text-sm text-charcoal/70 font-medium tracking-wide uppercase">Premium Products</div>
          </div>
          <div class="text-center group">
            <div class="text-3xl font-bold text-royal-gold group-hover:text-amber-glow transition-colors">250+</div>
            <div class="text-sm text-charcoal/70 font-medium tracking-wide uppercase">Quality Checks</div>
          </div>
        </div>

        <!-- Celebrity Endorsement Badge -->
        <div class="inline-flex items-center space-x-4 bg-white/90 backdrop-blur-sm px-6 py-4 rounded-2xl shadow-luxury">
          <div class="w-12 h-12 bg-golden-gradient rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          </div>
          <div>
            <div class="font-semibold text-charcoal">Celebrity Endorsed</div>
            <div class="text-sm text-charcoal/70">Trusted by Kareena Kapoor Khan</div>
          </div>
        </div>
      </div>
      
      <!-- Luxury Product Showcase -->
      <div class="relative animate-slide-up">
        <div class="relative">
          <!-- Golden Glow Background -->
          <div class="absolute inset-0 bg-golden-gradient rounded-3xl blur-3xl opacity-20 scale-110"></div>
          
          <!-- Premium Product Display -->
          <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-royal border border-golden-yellow/30">
            <div class="grid grid-cols-2 gap-6">
              <!-- Featured Product 1 -->
              <div class="luxury-card bg-gradient-to-br from-cream-luxury to-white p-6 rounded-2xl shadow-golden">
                <img 
                  src="https://images.pexels.com/photos/1458736/pexels-photo-1458736.jpeg?auto=compress&cs=tinysrgb&w=400" 
                  alt="Premium Organic Grains" 
                  class="w-full h-32 object-cover rounded-xl mb-4"
                />
                <h3 class="font-serif font-semibold text-charcoal mb-2">Royal Grains</h3>
                <p class="text-sm text-charcoal/70">Premium organic collection</p>
                <div class="mt-3 flex items-center justify-between">
                  <span class="text-royal-gold font-bold">₹299</span>
                  <div class="flex text-royal-gold">
                    ★★★★★
                  </div>
                </div>
              </div>

              <!-- Featured Product 2 -->
              <div class="luxury-card bg-gradient-to-br from-cream-luxury to-white p-6 rounded-2xl shadow-golden">
                <img 
                  src="https://images.pexels.com/photos/33783/olive-oil-salad-dressing-cooking-olive.jpg?auto=compress&cs=tinysrgb&w=400" 
                  alt="Premium Organic Oils" 
                  class="w-full h-32 object-cover rounded-xl mb-4"
                />
                <h3 class="font-serif font-semibold text-charcoal mb-2">Golden Oils</h3>
                <p class="text-sm text-charcoal/70">Cold-pressed perfection</p>
                <div class="mt-3 flex items-center justify-between">
                  <span class="text-royal-gold font-bold">₹449</span>
                  <div class="flex text-royal-gold">
                    ★★★★★
                  </div>
                </div>
              </div>

              <!-- Featured Product 3 -->
              <div class="luxury-card bg-gradient-to-br from-cream-luxury to-white p-6 rounded-2xl shadow-golden">
                <img 
                  src="https://images.pexels.com/photos/277253/pexels-photo-277253.jpeg?auto=compress&cs=tinysrgb&w=400" 
                  alt="Premium Organic Spices" 
                  class="w-full h-32 object-cover rounded-xl mb-4"
                />
                <h3 class="font-serif font-semibold text-charcoal mb-2">Royal Spices</h3>
                <p class="text-sm text-charcoal/70">Aromatic treasures</p>
                <div class="mt-3 flex items-center justify-between">
                  <span class="text-royal-gold font-bold">₹199</span>
                  <div class="flex text-royal-gold">
                    ★★★★★
                  </div>
                </div>
              </div>

              <!-- Featured Product 4 -->
              <div class="luxury-card bg-gradient-to-br from-cream-luxury to-white p-6 rounded-2xl shadow-golden">
                <img 
                  src="https://images.pexels.com/photos/1092730/pexels-photo-1092730.jpeg?auto=compress&cs=tinysrgb&w=400" 
                  alt="Premium Organic Honey" 
                  class="w-full h-32 object-cover rounded-xl mb-4"
                />
                <h3 class="font-serif font-semibold text-charcoal mb-2">Golden Honey</h3>
                <p class="text-sm text-charcoal/70">Nature's liquid gold</p>
                <div class="mt-3 flex items-center justify-between">
                  <span class="text-royal-gold font-bold">₹599</span>
                  <div class="flex text-royal-gold">
                    ★★★★★
                  </div>
                </div>
              </div>
            </div>

            <!-- Premium Badge -->
            <div class="absolute -top-4 -right-4 bg-royal-gold text-white px-4 py-2 rounded-full text-sm font-semibold shadow-golden animate-bounce-slow">
              Premium Collection
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-royal-gold rounded-full flex justify-center">
      <div class="w-1 h-3 bg-royal-gold rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>